<h1 class=" display-4 text-center mb-3">{{title}}</h1>
<div class="d-flex justify-content-between">
    <h3>Articles</h3>
    <button class="btn btn-primary mb-2">Add Article</button>
</div>

<ul class="list-group">
    {{#each articles_arr}}
    <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
        <div class="flex-column">
            {{this.name}}
            <p><small>by {{this.author}}</small></p>
            <span class="badge badge-info badge-pill"> {{this.published}} - {{this.read_time}}</span>
        </div>
        <div class="actions">
            <a href="#">Edit</a>
            <a href="#">Delete</a>
        </div>
    </li>
    {{/each}}
</ul>